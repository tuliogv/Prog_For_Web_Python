FROM python:3.12-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    DJANGO_SETTINGS_MODULE=config.settings \
    PORT=8000 \
    DEBUG=0

# libs do sistema (inclui libpq para Postgres)
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential curl ca-certificates libpq5 libpq-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# dependências primeiro (melhor cache)
COPY requirements.txt /app/
RUN pip install --no-cache-dir --upgrade pip \
    && pip install --no-cache-dir -r requirements.txt

# copia o projeto
COPY . /app/

# coleta estáticos para produção
RUN python manage.py collectstatic --noinput

EXPOSE 8000
CMD gunicorn config.wsgi:application --bind 0.0.0.0:${PORT} --workers 3 --timeout 120
